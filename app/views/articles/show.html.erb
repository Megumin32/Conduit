<body>
<div class="article-page">
  <div class="banner">
    <div class="container">
      <h1><%= @article.title %></h1>
      <div class="article-meta">
        <%= link_to 'Edit Article', edit_article_path(@article), class: 'btn btn-sm btn-outline-secondary' %>
        <%= link_to 'Delete Article', article_path(@article), method: :delete, data: {"turbo-method": :delete, turbo_confirm: "You sure?"}, class: 'btn btn-sm btn-outline-danger' %>
      </div>
    </div>
  </div>
  <div class="container page">
    <div class="row article-content">
      <div class="col-md-12">
         <%= @article.content_as_html.html_safe %>  <!-- マークダウンをHTMLとして表示 -->
        <ul class="tag-list">
          <% @article.tags.split(',').each do |tag| %>  
            <li class="tag-default tag-pill tag-outline"><%= tag.strip %></li> 
          <% end %>
        </ul>
      </div>
    </div>
    <hr />
  </div>
</div>