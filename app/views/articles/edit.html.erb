<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
        <ul class="error-messages">
          <li>That title is required</li>
        </ul>
        <%= form_with(model: @article, local: true) do |form| %>
          <fieldset class="form-group">
            <%= form.text_field :title, class: "form-control form-control-lg", placeholder: "Article Title" %>
          </fieldset>
        
          <fieldset class="form-group">
            <%= form.text_field :description, class: "form-control", placeholder: "Article Description" %>
          </fieldset>
        
          <fieldset class="form-group">
            <%= form.text_area :content, class: "form-control", rows: 8, placeholder: "Write your article" %>
          </fieldset>
        
          <fieldset class="form-group">
            <%= form.text_field :tags, class: "form-control", placeholder: "Enter tags (comma separated)" %>

          </fieldset>
          <button class="btn btn-lg pull-xs-right btn-primary" type="submit">Update Article</button>
        <% end %>
      </div>
    </div>
  </div>
</div>